@model List<InsurancePolicyManagementSystems.Service.DTO.CreatePoliciesDTO>
@{

    ViewData["Title"] = "Manage Policies";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2 class="text-center mb-4" style="font-weight:700; font-size:2.2rem; color:#0d6efd; text-transform:uppercase; letter-spacing:1px;">
    📋 Manage Policies
</h2>

<div class="container mt-4">
    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Admin" asp-action="CreatePolicies" class="btn btn-success">

            + Create New Policy
        </a>
    </div>

    @if (Model == null || !Model.Any())

    {
        <div class="alert alert-info text-center" role="alert">
            <h4 class="alert-heading">No Policies Created Yet</h4>
            <p>It seems there are no policies in the system. Please click the "Create New Policy" button to add a new policy.</p>
        </div>

    }

    else

    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Policy Name</th>
                        <th>Plan Type</th>
                        <th>Duration</th>
                        <th>Description</th>
                        @* <th>Sum Assurance</th>
                        <th>Amount Paid</th> *@
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var policy in Model)

                    {
                        <tr>
                            <td>@policy.PolicyName</td>
                            <td>@policy.PlanType</td>
                            <td>@policy.PolicyDuration Years</td>
                            <td>@policy.PolicyDescription</td>
                            <td class="text-center">
                                <a asp-controller="Admin" asp-action="EditPolicies" asp-route-id="@policy.Id" class="btn btn-sm btn-warning me-2" title="Edit">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <form asp-controller="Admin" asp-action="DeletePolicies" asp-route-id="@policy.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this policy?');" style="display:inline-block;">
                                    <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

}