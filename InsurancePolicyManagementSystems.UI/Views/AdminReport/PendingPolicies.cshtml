@model List<InsurancePolicyManagementSystems.Service.DTO.AllPolicyRegistrationDTO>

@{
    ViewData["Title"] = "Pending Policy Approvals";
}

<h2 class="text-center text-primary mb-4">Pending Policy Approvals (@Model.Count)</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-success" role="alert">
        🎉 All policies have been reviewed!
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Customer Name</th>
                <th>Policy Name</th>
                <th>Type</th>
                <th>Application Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RegistrationId</td>
                    <td>@item.CustomerName (@item.CustomerEmail)</td>
                    <td>@item.PolicyName</td>
                    <td>@item.PolicyType / @item.PlanType</td>
                    <td>@item.ApplicationDate.ToShortDateString()</td>
                    <td>
                        <button type="button" class="btn btn-success btn-sm me-2" onclick="confirmApproval(@item.RegistrationId)">
                            Approve
                        </button>

                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#rejectModal-@item.RegistrationId">
                            Reject
                        </button>

                        @* Hidden form for APPROVAL submission *@
                        <form id="form-approve-@item.RegistrationId"
                              asp-action="UpdatePolicyStatus"
                              asp-controller="AdminReport"
                              asp-route-id="@item.RegistrationId"
                              asp-route-status="Approved"
                              method="post"
                              style="display:none;">
                            @Html.AntiForgeryToken()
                        </form>
                    </td>
                </tr>

                <div class="modal fade" id="rejectModal-@item.RegistrationId" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <form asp-action="UpdatePolicyStatus" asp-controller="AdminReport" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.RegistrationId" />
                            <input type="hidden" name="status" value="Rejected" />
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Reject Policy @item.RegistrationId</h5>
                                </div>
                                <div class="modal-body">
                                    <label for="rejectionReason-@item.RegistrationId" class="form-label">Reason for Rejection (Required):</label>
                                    <textarea id="rejectionReason-@item.RegistrationId" name="rejectionReason" class="form-control" rows="3" required></textarea>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Confirm Rejection</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        function confirmApproval(policyId) {
            if (confirm("Are you sure you want to approve Policy ID " + policyId + "?")) {
                // Submit the hidden approval form
                document.getElementById('form-approve-' + policyId).submit();
            }
        }
    </script>
}