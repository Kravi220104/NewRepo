@model InsurancePolicyManagementSystems.Service.DTO.RegisterDTO

@{
    ViewData["Title"] = "Customer Registration";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">

        <h2 class="text-center mb-4"><i class="bi bi-person-plus-fill me-2"></i> Create Account</h2>

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Fullname" class="form-label"></label>
                        <input asp-for="Fullname" class="form-control" placeholder="John Doe" />
                        <span asp-validation-for="Fullname" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" placeholder="(+XX) XXXXX XXXXX" />
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" placeholder="City, State, Country" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Min 8 characters" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Repeat Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                </div>
            </div>
            <div class="mt-4">
                <input type="submit" value="Register Now" class="btn btn-success w-100 p-2" />
            </div>

            <p class="text-center mt-3">
                Already have an account? <a asp-controller="Customer" asp-action="Login">Log In Here</a>
            </p>

            <div class="text-center mt-3">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                    <i class="bi bi-arrow-left me-1"></i> Back to Home
                </a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}