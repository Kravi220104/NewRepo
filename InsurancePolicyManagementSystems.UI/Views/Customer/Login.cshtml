@model InsurancePolicyManagementSystems.Service.DTO.LoginDTO

@{
    ViewData["Title"] = "Customer Login"; /* Better Title */
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="account-container">
    <div class="account-box">

        <h2 class="text-center mb-4"><i class="bi bi-box-arrow-in-right me-2"></i> Customer Login</h2>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="text-end mb-3">
                <a asp-controller="Customer" asp-action="VerifyEmail">
                    Forgot Password?
                </a>
            </div>

            <div class="mb-4 form-check">
                <label class="form-check-label">
                    <input asp-for="RememberMe" class="form-check-input" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>

            <input type="submit" value="Log In" class="btn btn-success w-100 p-2" />

            <p class="text-center mt-3">
                Don't have an account? <a asp-controller="Customer" asp-action="Register">Register</a>
            </p>

            <div class="text-center mt-3">
                <a asp-controller="Home" asp-action="Index">
                    <i class="bi bi-arrow-left me-1"></i> Back to Home
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}